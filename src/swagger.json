{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas",
        "description": "Essa é uma documentação sobre a Atlas API",
        "version": "1.0.0",
        "contact": {
            "email": "email@test.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Cria um novo usuário",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Rocketseat",
                                    "email": "oi@rocketseat.com.br"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "8fd88e02-47e8-4a26-859a-a3d317dc9612",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2022-02-15T12:53:41.668Z",
                                        "updated_at": "2022-02-15T12:53:41.668Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já está sendo utilizado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": "User already exists."
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retorna todos os usuários",
                "description": "Somente usuário `admin` pode acessar",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "admin": {
                                                "type": "booelan"
                                            },
                                            "id": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string"
                                            },
                                            "updated_at": {
                                                "type": "string"
                                            }
                                        },
                                        "example": [
                                            {
                                                "admin": true,
                                                "id": "8fd88e02-47e8-4a26-859a-a3d317dc9612",
                                                "name": "Rocketseat",
                                                "email": "oi@rocketseat.com.br",
                                                "created_at": "2022-02-15T12:53:41.668Z",
                                                "updated_at": "2022-02-15T12:53:41.668Z"
                                            },
                                            {
                                                "admin": false,
                                                "id": "9fd88e02-47e8-4a26-859a-a3d317dc9612",
                                                "name": "Gustavo Aragão",
                                                "email": "gustavo@rocketseat.com.br",
                                                "created_at": "2022-02-15T12:53:41.668Z",
                                                "updated_at": "2022-02-15T12:53:41.668Z"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": "string"
                                    },
                                    "example": {
                                        "error": "Only admins can access this list."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Retorna um usuário específico.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "description": "ID do usuário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "booelan"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "8fd88e02-47e8-4a26-859a-a3d317dc9612",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2022-02-15T12:53:41.668Z",
                                        "updated_at": "2022-02-15T12:53:41.668Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "User not found."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "Torna um usuário em admin",
                "parameters": [
                    {
                        "in": "path",
                        "name": "user_id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "booelan"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "string"
                                        },
                                        "updated_at": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "admin": true,
                                        "id": "8fd88e02-47e8-4a26-859a-a3d317dc9612",
                                        "name": "Rocketseat",
                                        "email": "oi@rocketseat.com.br",
                                        "created_at": "2022-02-15T12:53:41.668Z",
                                        "updated_at": "2022-02-15T12:53:41.668Z"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "User not found."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}